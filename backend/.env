    env_file:
      - .env  # ðŸ‘‰ à¸Šà¸µà¹‰à¹„à¸›à¸¢à¸±à¸‡à¹„à¸Ÿà¸¥à¹Œ .env à¸—à¸µà¹ˆà¸­à¸¢à¸¹à¹ˆà¹ƒà¸™ root directory
    environment:
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_NAME=${DB_NAME:-kanban_db}
